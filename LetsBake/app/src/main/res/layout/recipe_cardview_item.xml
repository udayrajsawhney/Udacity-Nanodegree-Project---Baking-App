<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size"
    android:layout_marginRight="@dimen/size"
    android:layout_marginTop="@dimen/size"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="@dimen/size_xs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:contentDescription="@string/content_description_recipe_image" />

        <TextView
            android:id="@+id/recipeTitle"
            style="@style/CardView.Content.SansSerifNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/size_l" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
